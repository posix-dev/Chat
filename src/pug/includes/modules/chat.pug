div(class='chat-wrapper center hide')
    div(class='chat-options')
        div(class='chat-options__img-wrapper')
            img(class='chat-options__img collapse')
            div(class='chat-options__img fullscreen')
            img(class='chat-options__img close')
    div(class='chat-content-wrapper')
        div(class='chat-leftside-wrapper')
            div(class='chat-menu-wrapper')
                div(class='chat-menu__hamburger')
                div(class='chat-menu__search')
                    form(class='chat-menu__search-form')
                        input(type='search' class='chat-menu__search-item' placeholder='Найти...')
            div(class='chat-list-wrapper')
                ul(class='chat-list')
                    li(class='chat-item')
                        div(class='chat-item-wrapper')
                            img(class='chat-item__avatar')
                            div(class='chat-item__info')
                                p(class='chat-item__profile-name') Игорь Яицкий
                                p(class='chat-item__last-message') Рад был пообщаться
        div(class='chat-messages-wrapper')
            div(class='chat-messages-info')
                p(class='chat-messages__type') Чат
                p(class='chat-messages__member-count') 2 участника
            div(class='chat-detail-messages-wrapper')
                img(class='chat-detail-messages__avatar')
                ul(class='chat-detail-messages__user-list')
                    li(class='chat-detail-messages__item')
                        div(class='chat-detail-messages__item-wrapper')
                            div(class='chat-detail-messages__message')
                                span(class='chat-detail-messages__message-text') Привет!
                                span(class='chat-detail-messages__message-time') 17:55
                    li(class='chat-detail-messages__item')
